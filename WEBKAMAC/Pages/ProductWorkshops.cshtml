@page "{id:int}"
@model ProductWorkshopsModel
@{
    ViewData["Title"] = "ТАКТИЧЕСКИЕ ЦЕХА ПРОИЗВОДСТВА";
}

<style>
    :root {
        --metal-dark: #0a0e14;
        --metal-medium: #141a23;
        --metal-light: #1e2430;
        --accent-orange: #ed8936;
        --accent-red: #f56565;
        --accent-green: #48bb78;
        --accent-blue: #4299e1;
        --accent-purple: #9f7aea;
        --text-light: #e2e8f0;
        --text-gray: #a0aec0;
        --bg-dark: #05080c;
        --bg-card: #0f1419;
        --border-dark: #2d3748;
        --glow-orange: 0 0 25px rgba(237, 137, 54, 0.5);
        --glow-blue: 0 0 25px rgba(66, 153, 225, 0.5);
        --glow-green: 0 0 25px rgba(72, 187, 120, 0.5);
        --glow-purple: 0 0 25px rgba(159, 122, 234, 0.5);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, var(--bg-dark) 0%, #0a0f1a 100%);
        font-family: 'Rajdhani', 'Arial', sans-serif;
        color: var(--text-light);
        min-height: 100vh;
        padding: 0;
        overflow-x: hidden;
    }

    .tactical-command {
        max-width: 1600px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Mission Header */
    .mission-header {
        background: var(--bg-card);
        border: 3px solid var(--border-dark);
        border-radius: 20px;
        padding: 30px 40px;
        margin-bottom: 30px;
        position: relative;
        box-shadow: var(--glow-orange);
    }

        .mission-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-orange), var(--accent-blue), var(--accent-green));
        }

    .mission-path {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
        font-size: 14px;
    }

    .path-item {
        color: var(--text-gray);
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: color 0.3s ease;
    }

        .path-item:hover {
            color: var(--accent-orange);
        }

    .path-separator {
        color: var(--accent-blue);
    }

    .path-current {
        color: var(--accent-orange);
        font-weight: 700;
    }

    .mission-title {
        font-size: 42px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--accent-orange), var(--accent-blue));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 15px;
        text-shadow: 0 5px 20px rgba(0,0,0,0.5);
    }

    /* Product Intel */
    .product-intel {
        background: var(--metal-dark);
        border: 2px solid var(--border-dark);
        border-radius: 15px;
        padding: 25px 30px;
        margin-bottom: 25px;
        position: relative;
        overflow: hidden;
    }

        .product-intel::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, var(--accent-orange), var(--accent-blue));
        }

    .product-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
        flex-wrap: wrap;
        gap: 20px;
    }

    .product-name {
        font-size: 28px;
        font-weight: 800;
        color: var(--text-light);
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .product-icon {
        font-size: 36px;
    }

    .product-stats {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .product-stat {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
    }

    .stat-label {
        font-size: 11px;
        color: var(--text-gray);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    .stat-value {
        font-size: 16px;
        font-weight: 800;
        color: var(--text-light);
    }

    .product-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 20px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .detail-badge {
        background: var(--metal-light);
        color: var(--text-light);
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .badge-orange {
        background: var(--accent-orange);
    }

    .badge-blue {
        background: var(--accent-blue);
    }

    .badge-purple {
        background: var(--accent-purple);
    }

    .badge-green {
        background: var(--accent-green);
    }

    /* Operations Grid */
    .operations-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-bottom: 35px;
    }

    .operation-card {
        background: var(--bg-card);
        border: 2px solid var(--border-dark);
        border-radius: 15px;
        padding: 30px 25px;
        text-align: center;
        position: relative;
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .operation-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-orange), var(--accent-blue));
        }

        .operation-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--glow-orange);
            border-color: var(--accent-orange);
        }

    .operation-icon {
        font-size: 42px;
        margin-bottom: 15px;
        display: block;
    }

    .operation-value {
        font-size: 36px;
        font-weight: 800;
        color: var(--text-light);
        margin-bottom: 8px;
        text-shadow: 0 2px 10px rgba(0,0,0,0.3);
    }

    .operation-label {
        font-size: 14px;
        color: var(--text-gray);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    /* Production Terminal */
    .production-terminal {
        background: var(--bg-card);
        border: 3px solid var(--border-dark);
        border-radius: 15px;
        overflow: hidden;
        position: relative;
        box-shadow: var(--glow-blue);
        margin-bottom: 30px;
    }

    .terminal-header {
        background: linear-gradient(135deg, var(--metal-medium), var(--metal-light));
        padding: 25px 30px;
        border-bottom: 3px solid var(--border-dark);
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        .terminal-header::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-blue), transparent);
        }

    .terminal-title {
        font-size: 24px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .terminal-icon {
        font-size: 28px;
    }

    .terminal-count {
        background: var(--accent-blue);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .terminal-body {
        padding: 0;
    }

    /* Production Table */
    .production-table {
        width: 100%;
        border-collapse: collapse;
        background: var(--metal-dark);
    }

        .production-table th {
            background: var(--metal-medium);
            padding: 20px 25px;
            text-align: left;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 1.5px;
            border-bottom: 3px solid var(--border-dark);
            color: var(--accent-blue);
            position: sticky;
            top: 0;
        }

        .production-table td {
            padding: 18px 25px;
            border-bottom: 1px solid var(--border-dark);
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .production-table tr:hover td {
            background: rgba(66, 153, 225, 0.1);
            transform: translateX(5px);
        }

    .workshop-cell {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .workshop-icon {
        font-size: 20px;
    }

    .workshop-name {
        font-weight: 700;
        color: var(--text-light);
    }

    .metric-cell {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .metric-value {
        font-weight: 800;
    }

    .metric-badge {
        background: var(--metal-light);
        color: var(--text-light);
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Summary Panel */
    .summary-panel {
        background: var(--metal-dark);
        border: 2px solid var(--border-dark);
        border-radius: 12px;
        padding: 25px 30px;
        margin: 25px;
    }

    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        text-align: center;
    }

    .summary-item {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .summary-label {
        font-size: 12px;
        color: var(--text-gray);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    .summary-value {
        font-size: 20px;
        font-weight: 800;
        color: var(--text-light);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 40px;
        color: var(--text-gray);
    }

    .empty-icon {
        font-size: 80px;
        margin-bottom: 25px;
        display: block;
        opacity: 0.5;
    }

    .empty-title {
        font-size: 24px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 15px;
    }

    .empty-description {
        font-size: 16px;
        line-height: 1.5;
    }

    /* Return Button */
    .return-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: var(--metal-light);
        color: var(--text-light);
        border: 2px solid var(--border-dark);
        border-radius: 10px;
        padding: 15px 25px;
        font-size: 16px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        text-decoration: none;
        transition: all 0.3s ease;
        margin: 20px auto;
    }

        .return-btn:hover {
            background: var(--accent-blue);
            color: white;
            border-color: var(--accent-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .tactical-command {
            padding: 15px;
        }

        .mission-header {
            padding: 25px;
        }

        .mission-title {
            font-size: 32px;
        }

        .product-header {
            flex-direction: column;
            text-align: center;
        }

        .operations-grid {
            grid-template-columns: 1fr;
        }

        .production-table th,
        .production-table td {
            padding: 12px 15px;
        }

        .summary-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 480px) {
        .tactical-command {
            padding: 10px;
        }

        .mission-header {
            padding: 20px;
        }

        .mission-title {
            font-size: 24px;
        }

        .product-details {
            grid-template-columns: 1fr;
        }

        .summary-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="tactical-command">
    <!-- Mission Header -->
    <div class="mission-header">
        <div class="mission-path">
            <a href="/Products" class="path-item">🎯 АРСЕНАЛ ПРОДУКЦИИ</a>
            <span class="path-separator">▶</span>
            <span class="path-current">⚡ ТАКТИЧЕСКИЕ ЦЕХА</span>
        </div>
        <h1 class="mission-title">КОНТРОЛЬ ПРОИЗВОДСТВЕННЫХ ЦЕХОВ</h1>
    </div>

    <!-- Product Intel -->
    <div class="product-intel">
        <div class="product-header">
            <div class="product-name">
                <span class="product-icon">📦</span>
                @Model.Product?.ProductName
            </div>
            <div class="product-stats">
                <div class="product-stat">
                    <div class="stat-label">АРТИКУЛ</div>
                    <div class="stat-value">@Model.Product?.ArticleNumber</div>
                </div>
                <div class="product-stat">
                    <div class="stat-label">СТОИМОСТЬ</div>
                    <div class="stat-value">@Model.Product?.MinPartnerPrice.ToString("C2")</div>
                </div>
                <div class="product-stat">
                    <div class="stat-label">ЦЕХОВ</div>
                    <div class="stat-value">@Model.ManufacturingData.Count</div>
                </div>
            </div>
        </div>
        <div class="product-details">
            <div class="detail-item">
                <span>📋</span>
                <span class="detail-badge badge-blue">@Model.Product?.ProductType</span>
            </div>
            <div class="detail-item">
                <span>🧪</span>
                <span class="detail-badge badge-orange">@Model.Product?.MaterialType</span>
            </div>
            <div class="detail-item">
                <span>⏱️</span>
                <span class="detail-badge badge-green">@Model.TotalManufacturingTime.ToString("F1") Ч</span>
            </div>
            <div class="detail-item">
                <span>👥</span>
                <span class="detail-badge badge-purple">@Model.ManufacturingData.Sum(x => x.WorkersCount) ОПЕРАТОРОВ</span>
            </div>
        </div>
    </div>

    <!-- Operations Grid -->
    <div class="operations-grid">
        <div class="operation-card">
            <span class="operation-icon">⏱️</span>
            <div class="operation-value">@Model.TotalManufacturingTime.ToString("F1")</div>
            <div class="operation-label">ЧАСОВ ПРОИЗВОДСТВА</div>
        </div>

        <div class="operation-card">
            <span class="operation-icon">🏗️</span>
            <div class="operation-value">@Model.ManufacturingData.Count</div>
            <div class="operation-label">АКТИВНЫХ ЦЕХОВ</div>
        </div>

        <div class="operation-card">
            <span class="operation-icon">👥</span>
            <div class="operation-value">@Model.ManufacturingData.Sum(x => x.WorkersCount)</div>
            <div class="operation-label">ОПЕРАТОРОВ СИСТЕМЫ</div>
        </div>

        <div class="operation-card">
            <span class="operation-icon">📊</span>
            <div class="operation-value">@Model.ManufacturingData.Average(x => x.ManufacturingTimeHours).ToString("F1")</div>
            <div class="operation-label">СРЕДНЕЕ ВРЕМЯ (Ч)</div>
        </div>
    </div>

    <!-- Production Terminal -->
    <div class="production-terminal">
        <div class="terminal-header">
            <div class="terminal-title">
                <span class="terminal-icon">🏭</span>
                ТАКТИЧЕСКИЕ ПРОИЗВОДСТВЕННЫЕ ЦЕХА
            </div>
            <div class="terminal-count">
                @Model.ManufacturingData.Count ЛОКАЦИЙ
            </div>
        </div>
        <div class="terminal-body">
            @if (Model.ManufacturingData.Any())
            {
                <div style="overflow-x: auto;">
                    <table class="production-table">
                        <thead>
                            <tr>
                                <th>ПРОИЗВОДСТВЕННАЯ ЛОКАЦИЯ</th>
                                <th>ТИП ОПЕРАЦИИ</th>
                                <th>ОПЕРАТОРЫ</th>
                                <th>ВРЕМЯ ЦИКЛА</th>
                                <th>ТРУДОЗАТРАТЫ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model.ManufacturingData)
                            {
                                <tr>
                                    <td>
                                        <div class="workshop-cell">
                                            <span class="workshop-icon">🏭</span>
                                            <span class="workshop-name">@data.WorkshopName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="metric-badge badge-purple">@data.WorkshopType</span>
                                    </td>
                                    <td>
                                        <div class="metric-cell">
                                            <span>👥</span>
                                            <span class="metric-value">@data.WorkersCount</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="metric-cell">
                                            <span>⏱️</span>
                                            <span class="metric-value">@data.ManufacturingTimeHours Ч</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="metric-badge badge-green">
                                            @((data.ManufacturingTimeHours * data.WorkersCount).ToString("F1")) Ч×ЧЕЛ
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Panel -->
                <div class="summary-panel">
                    <div class="summary-grid">
                        <div class="summary-item">
                            <div class="summary-label">ОБЩЕЕ ВРЕМЯ ЦИКЛА</div>
                            <div class="summary-value">@Model.TotalManufacturingTime.ToString("F1") Ч</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">ВСЕГО ОПЕРАТОРОВ</div>
                            <div class="summary-value">@Model.ManufacturingData.Sum(x => x.WorkersCount)</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">ОБЩИЕ ТРУДОЗАТРАТЫ</div>
                            <div class="summary-value">@Model.ManufacturingData.Sum(x => x.ManufacturingTimeHours * x.WorkersCount).ToString("F1") Ч</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">ПРОИЗВОДСТВЕННЫХ ЦЕХОВ</div>
                            <div class="summary-value">@Model.ManufacturingData.Count</div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <span class="empty-icon">🏭</span>
                    <div class="empty-title">ПРОИЗВОДСТВО НЕ АКТИВИРОВАНО</div>
                    <div class="empty-description">
                        ДЛЯ ДАННОГО ИЗДЕЛИЯ НЕ НАЗНАЧЕНЫ ПРОИЗВОДСТВЕННЫЕ ЦЕХА<br>
                        СИСТЕМА ОЖИДАЕТ КОНФИГУРАЦИИ ПРОИЗВОДСТВЕННЫХ МАРШРУТОВ
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Return Button -->
    <div style="text-align: center;">
        <a href="/Products" class="return-btn">
            ← ВОЗВРАТ К АРСЕНАЛУ
        </a>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add scanning animation to operation cards
        const operationCards = document.querySelectorAll('.operation-card');
        operationCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'scale(0.8) translateY(20px)';

            setTimeout(() => {
                card.style.transition = 'all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                card.style.opacity = '1';
                card.style.transform = 'scale(1) translateY(0)';
            }, index * 150);
        });

        // Add real-time production monitoring simulation
        function simulateProductionMonitoring() {
            const metrics = document.querySelectorAll('.metric-value');
            metrics.forEach(metric => {
                if (metric.textContent.includes('Ч')) {
                    metric.style.color = '#ed8936';
                    setTimeout(() => {
                        metric.style.color = '#e2e8f0';
                    }, 600);
                }
            });
        }

        // Update every 10 seconds
        setInterval(simulateProductionMonitoring, 10000);

        // Add row animation
        const tableRows = document.querySelectorAll('.production-table tbody tr');
        tableRows.forEach((row, index) => {
            row.style.opacity = '0';
            row.style.transform = 'translateX(-30px)';

            setTimeout(() => {
                row.style.transition = 'all 0.4s ease';
                row.style.opacity = '1';
                row.style.transform = 'translateX(0)';
            }, index * 80);
        });

        // Add pulse animation to summary values
        const summaryValues = document.querySelectorAll('.summary-value');
        summaryValues.forEach(value => {
            setInterval(() => {
                value.style.color = '#48bb78';
                setTimeout(() => {
                    value.style.color = '#e2e8f0';
                }, 500);
            }, 7000);
        });

        // Add interactive glow to product intel
        const productIntel = document.querySelector('.product-intel');
        productIntel.addEventListener('mouseenter', function() {
            this.style.boxShadow = '0 0 30px rgba(237, 137, 54, 0.3)';
        });

        productIntel.addEventListener('mouseleave', function() {
            this.style.boxShadow = 'none';
        });
    });
</script>