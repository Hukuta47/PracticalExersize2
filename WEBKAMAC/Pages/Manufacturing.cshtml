@page
@model ManufacturingModel
@{
    ViewData["Title"] = "КОНТРОЛЬ ПРОИЗВОДСТВА";
}

<style>
    :root {
        --metal-dark: #0a0e14;
        --metal-medium: #141a23;
        --metal-light: #1e2430;
        --accent-orange: #ed8936;
        --accent-red: #f56565;
        --accent-green: #48bb78;
        --accent-blue: #4299e1;
        --accent-purple: #9f7aea;
        --text-light: #e2e8f0;
        --text-gray: #a0aec0;
        --bg-dark: #05080c;
        --bg-card: #0f1419;
        --border-dark: #2d3748;
        --glow-orange: 0 0 25px rgba(237, 137, 54, 0.5);
        --glow-blue: 0 0 25px rgba(66, 153, 225, 0.5);
        --glow-green: 0 0 25px rgba(72, 187, 120, 0.5);
        --glow-purple: 0 0 25px rgba(159, 122, 234, 0.5);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, var(--bg-dark) 0%, #0a0f1a 100%);
        font-family: 'Rajdhani', 'Arial', sans-serif;
        color: var(--text-light);
        min-height: 100vh;
        padding: 0;
        overflow-x: hidden;
    }

    .production-command {
        max-width: 1600px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Mission Header */
    .mission-header {
        background: var(--bg-card);
        border: 3px solid var(--border-dark);
        border-radius: 20px;
        padding: 30px 40px;
        margin-bottom: 30px;
        position: relative;
        box-shadow: var(--glow-orange);
        text-align: center;
    }

        .mission-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-orange), var(--accent-blue), var(--accent-green));
        }

    .mission-title {
        font-size: 42px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--accent-orange), var(--accent-blue));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 10px;
        text-shadow: 0 5px 20px rgba(0,0,0,0.5);
    }

    .mission-tagline {
        color: var(--text-gray);
        font-size: 18px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    /* Operations Grid */
    .operations-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-bottom: 35px;
    }

    /* Operation Card */
    .operation-card {
        background: var(--bg-card);
        border: 2px solid var(--border-dark);
        border-radius: 15px;
        padding: 30px 25px;
        text-align: center;
        position: relative;
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .operation-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-orange), var(--accent-blue));
        }

        .operation-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--glow-orange);
            border-color: var(--accent-orange);
        }

    .operation-icon {
        font-size: 42px;
        margin-bottom: 15px;
        display: block;
    }

    .operation-value {
        font-size: 36px;
        font-weight: 800;
        color: var(--text-light);
        margin-bottom: 8px;
        text-shadow: 0 2px 10px rgba(0,0,0,0.3);
    }

    .operation-label {
        font-size: 14px;
        color: var(--text-gray);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    /* Analytics Grid */
    .analytics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .analytics-card {
        background: var(--metal-dark);
        border: 2px solid var(--border-dark);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s ease;
    }

        .analytics-card:hover {
            border-color: var(--accent-green);
            transform: translateY(-2px);
        }

    .analytics-value {
        font-size: 24px;
        font-weight: 700;
        color: var(--accent-green);
        margin-bottom: 5px;
    }

    .analytics-label {
        font-size: 12px;
        color: var(--text-gray);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    /* Production Terminal */
    .production-terminal {
        background: var(--bg-card);
        border: 3px solid var(--border-dark);
        border-radius: 15px;
        overflow: hidden;
        position: relative;
        box-shadow: var(--glow-blue);
        margin-bottom: 30px;
    }

    .terminal-header {
        background: linear-gradient(135deg, var(--metal-medium), var(--metal-light));
        padding: 25px 30px;
        border-bottom: 3px solid var(--border-dark);
        position: relative;
    }

        .terminal-header::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-blue), transparent);
        }

    .terminal-title {
        font-size: 24px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .terminal-icon {
        font-size: 28px;
    }

    .terminal-body {
        padding: 0;
    }

    /* Production Table */
    .production-table {
        width: 100%;
        border-collapse: collapse;
        background: var(--metal-dark);
    }

        .production-table th {
            background: var(--metal-medium);
            padding: 20px 25px;
            text-align: left;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 1.5px;
            border-bottom: 3px solid var(--border-dark);
            color: var(--accent-blue);
            position: sticky;
            top: 0;
        }

        .production-table td {
            padding: 18px 25px;
            border-bottom: 1px solid var(--border-dark);
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .production-table tr:hover td {
            background: rgba(66, 153, 225, 0.1);
            transform: translateX(5px);
        }

    .data-badge {
        background: var(--metal-light);
        color: var(--text-light);
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .badge-orange {
        background: var(--accent-orange);
    }

    .badge-green {
        background: var(--accent-green);
    }

    .badge-purple {
        background: var(--accent-purple);
    }

    .badge-blue {
        background: var(--accent-blue);
    }

    /* Summary Panel */
    .summary-panel {
        background: var(--metal-dark);
        border: 2px solid var(--border-dark);
        border-radius: 12px;
        padding: 25px 30px;
        margin: 25px;
    }

    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        text-align: center;
    }

    .summary-item {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .summary-label {
        font-size: 12px;
        color: var(--text-gray);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    .summary-value {
        font-size: 20px;
        font-weight: 800;
        color: var(--text-light);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 40px;
        color: var(--text-gray);
    }

    .empty-icon {
        font-size: 80px;
        margin-bottom: 25px;
        display: block;
        opacity: 0.5;
    }

    .empty-title {
        font-size: 24px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 15px;
    }

    .empty-description {
        font-size: 16px;
        line-height: 1.5;
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .production-command {
            padding: 15px;
        }

        .mission-header {
            padding: 25px;
        }

        .mission-title {
            font-size: 32px;
        }

        .operations-grid {
            grid-template-columns: 1fr;
        }

        .analytics-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .production-table th,
        .production-table td {
            padding: 12px 15px;
            font-size: 11px;
        }

        .summary-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 480px) {
        .production-command {
            padding: 10px;
        }

        .mission-header {
            padding: 20px;
        }

        .mission-title {
            font-size: 24px;
        }

        .analytics-grid {
            grid-template-columns: 1fr;
        }

        .summary-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Scanning Animation */
    @@keyframes scan {
        0% {
            transform: translateX(-100%);
        }

        100% {
            transform: translateX(400%);
        }
    }

    .scanning::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 20%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(66, 153, 225, 0.3), transparent);
        animation: scan 3s linear infinite;
    }
</style>

<div class="production-command">
    <!-- Mission Header -->
    <div class="mission-header">
        <h1 class="mission-title">КОНТРОЛЬ ПРОИЗВОДСТВА</h1>
        <div class="mission-tagline">МОНИТОРИНГ ПРОИЗВОДСТВЕННЫХ ОПЕРАЦИЙ В РЕАЛЬНОМ ВРЕМЕНИ</div>
    </div>

    @if (Model.ManufacturingData.Any())
    {
        <!-- Operations Grid -->
        <div class="operations-grid">
            <div class="operation-card">
                <span class="operation-icon">📊</span>
                <div class="operation-value">@Model.ManufacturingData.Count</div>
                <div class="operation-label">ОПЕРАЦИЙ В СИСТЕМЕ</div>
            </div>

            <div class="operation-card">
                <span class="operation-icon">🏗️</span>
                <div class="operation-value">@Model.ManufacturingData.Select(x => x.WorkshopName).Distinct().Count()</div>
                <div class="operation-label">АКТИВНЫХ ЦЕХОВ</div>
            </div>

            <div class="operation-card">
                <span class="operation-icon">⏱️</span>
                <div class="operation-value">@Model.ManufacturingData.Sum(x => x.ManufacturingTimeHours).ToString("F1")</div>
                <div class="operation-label">ЧАСОВ ПРОИЗВОДСТВА</div>
            </div>

            <div class="operation-card">
                <span class="operation-icon">👥</span>
                <div class="operation-value">@Model.ManufacturingData.Sum(x => x.WorkersCount)</div>
                <div class="operation-label">ОПЕРАТОРОВ СИСТЕМЫ</div>
            </div>
        </div>

        <!-- Analytics Grid -->
        <div class="analytics-grid">
            <div class="analytics-card">
                <div class="analytics-value">@Model.ManufacturingData.Select(x => x.ProductName).Distinct().Count()</div>
                <div class="analytics-label">УНИКАЛЬНЫХ ПРОДУКТОВ</div>
            </div>
            <div class="analytics-card">
                <div class="analytics-value">@(Model.ManufacturingData.Any() ? Model.ManufacturingData.Average(x => x.ManufacturingTimeHours).ToString("F1") : "0.0")</div>
                <div class="analytics-label">СРЕДНЕЕ ВРЕМЯ (Ч)</div>
            </div>
            <div class="analytics-card">
                <div class="analytics-value">@(Model.ManufacturingData.Any() ? Model.ManufacturingData.Average(x => x.WorkersCount).ToString("F1") : "0.0")</div>
                <div class="analytics-label">СРЕДНЕЕ ОПЕРАТОРОВ</div>
            </div>
            <div class="analytics-card">
                <div class="analytics-value">@(Model.ManufacturingData.Any() ? Model.ManufacturingData.Average(x => x.MinPartnerPrice).ToString("C0") : "₽0")</div>
                <div class="analytics-label">СРЕДНЯЯ СТОИМОСТЬ</div>
            </div>
        </div>
    }

    <!-- Production Terminal -->
    <div class="production-terminal">
        <div class="terminal-header">
            <div class="terminal-title">
                <span class="terminal-icon">📋</span>
                ПРОИЗВОДСТВЕННЫЙ ЖУРНАЛ
            </div>
        </div>
        <div class="terminal-body">
            @if (Model.ManufacturingData.Any())
            {
                <div style="overflow-x: auto;">
                    <table class="production-table">
                        <thead>
                            <tr>
                                <th>ИЗДЕЛИЕ</th>
                                <th>ЛОКАЦИЯ</th>
                                <th>ТИП ЦЕХА</th>
                                <th>ВРЕМЯ</th>
                                <th>ОПЕРАТОРЫ</th>
                                <th>КЛАСС</th>
                                <th>МАТЕРИАЛ</th>
                                <th>СТОИМОСТЬ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model.ManufacturingData)
                            {
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 10px;">
                                            <span style="font-size: 18px;">📦</span>
                                            <span style="font-weight: 700;">@data.ProductName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 10px;">
                                            <span style="font-size: 18px;">🏭</span>
                                            <span>@data.WorkshopName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="data-badge badge-purple">@data.WorkshopType</span>
                                    </td>
                                    <td>
                                        <span class="data-badge badge-blue">
                                            ⏱️ @data.ManufacturingTimeHours Ч
                                        </span>
                                    </td>
                                    <td>
                                        <span class="data-badge badge-green">
                                            👥 @data.WorkersCount
                                        </span>
                                    </td>
                                    <td>
                                        <span class="data-badge">@data.ProductType</span>
                                    </td>
                                    <td>
                                        <span class="data-badge badge-orange">@data.MaterialType</span>
                                    </td>
                                    <td>
                                        <span style="font-weight: 800; color: var(--accent-green);">
                                            @data.MinPartnerPrice.ToString("C2")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Panel -->
                <div class="summary-panel">
                    <div class="summary-grid">
                        <div class="summary-item">
                            <div class="summary-label">ОБЩЕЕ ВРЕМЯ</div>
                            <div class="summary-value">@Model.ManufacturingData.Sum(x => x.ManufacturingTimeHours).ToString("F1") Ч</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">ВСЕГО ОПЕРАТОРОВ</div>
                            <div class="summary-value">@Model.ManufacturingData.Sum(x => x.WorkersCount)</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">СРЕДНЕЕ ВРЕМЯ</div>
                            <div class="summary-value">@(Model.ManufacturingData.Any() ? Model.ManufacturingData.Average(x => x.ManufacturingTimeHours).ToString("F1") : "0.0") Ч</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">ОПЕРАЦИЙ</div>
                            <div class="summary-value">@Model.ManufacturingData.Count</div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <span class="empty-icon">🏭</span>
                    <div class="empty-title">ПРОИЗВОДСТВО ПРИОСТАНОВЛЕНО</div>
                    <div class="empty-description">
                        ОЖИДАНИЕ ПРОИЗВОДСТВЕННЫХ ДАННЫХ<br>
                        СИСТЕМА ГОТОВА К ПРИЕМУ ИНФОРМАЦИИ
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add scanning animation to operation cards
        const operationCards = document.querySelectorAll('.operation-card');
        operationCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'scale(0.8) translateY(20px)';

            setTimeout(() => {
                card.style.transition = 'all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                card.style.opacity = '1';
                card.style.transform = 'scale(1) translateY(0)';
            }, index * 150);
        });

        // Add real-time data simulation
        function simulateProductionUpdates() {
            const badges = document.querySelectorAll('.data-badge');
            badges.forEach(badge => {
                if (badge.textContent.includes('⏱️')) {
                    badge.style.background = '#48bb78';
                    setTimeout(() => {
                        badge.style.background = '';
                    }, 1000);
                }
            });
        }

        // Update every 8 seconds
        setInterval(simulateProductionUpdates, 8000);

        // Add interactive scanning effect
        const terminal = document.querySelector('.production-terminal');
        terminal.addEventListener('mouseenter', function() {
            this.classList.add('scanning');
        });

        terminal.addEventListener('mouseleave', function() {
            this.classList.remove('scanning');
        });

        // Add row animation
        const tableRows = document.querySelectorAll('.production-table tbody tr');
        tableRows.forEach((row, index) => {
            row.style.opacity = '0';
            row.style.transform = 'translateX(-30px)';

            setTimeout(() => {
                row.style.transition = 'all 0.4s ease';
                row.style.opacity = '1';
                row.style.transform = 'translateX(0)';
            }, index * 80);
        });

        // Add pulse animation to summary values
        const summaryValues = document.querySelectorAll('.summary-value');
        summaryValues.forEach(value => {
            setInterval(() => {
                value.style.color = '#ed8936';
                setTimeout(() => {
                    value.style.color = '#e2e8f0';
                }, 500);
            }, 5000);
        });
    });
</script>