@page
@model IndexModel
@{
    ViewData["Title"] = "Производственная компания Комфорт";
}

<style>
    :root {
        --metal-dark: #0a0e14;
        --metal-medium: #141a23;
        --metal-light: #1e2430;
        --accent-orange: #ed8936;
        --accent-red: #f56565;
        --accent-green: #48bb78;
        --accent-blue: #4299e1;
        --accent-purple: #9f7aea;
        --text-light: #e2e8f0;
        --text-gray: #a0aec0;
        --bg-dark: #05080c;
        --bg-card: #0f1419;
        --border-dark: #2d3748;
        --glow-orange: 0 0 25px rgba(237, 137, 54, 0.5);
        --glow-blue: 0 0 25px rgba(66, 153, 225, 0.5);
        --glow-green: 0 0 25px rgba(72, 187, 120, 0.5);
        --glow-purple: 0 0 25px rgba(159, 122, 234, 0.5);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, var(--bg-dark) 0%, #0a0f1a 100%);
        font-family: 'Rajdhani', 'Arial', sans-serif;
        color: var(--text-light);
        min-height: 100vh;
        padding: 0;
        overflow-x: hidden;
    }

    .command-hub {
        max-width: 1600px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Mission Control Header */
    .mission-control {
        background: var(--bg-card);
        border: 3px solid var(--border-dark);
        border-radius: 20px;
        padding: 40px;
        margin-bottom: 30px;
        position: relative;
        box-shadow: var(--glow-blue);
        text-align: center;
        overflow: hidden;
    }

        .mission-control::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-orange), var(--accent-blue), var(--accent-green), var(--accent-purple));
        }

        .mission-control::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 30% 20%, rgba(66, 153, 225, 0.1) 0%, transparent 50%);
            pointer-events: none;
        }

    .hub-title {
        font-size: 52px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--accent-orange), var(--accent-blue), var(--accent-green));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-transform: uppercase;
        letter-spacing: 3px;
        margin-bottom: 10px;
        text-shadow: 0 5px 20px rgba(0,0,0,0.5);
    }

    .hub-subtitle {
        color: var(--text-gray);
        font-size: 20px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 25px;
    }

    /* Status Grid */
    .status-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-bottom: 35px;
    }

    /* Status Card */
    .status-card {
        background: var(--bg-card);
        border: 2px solid var(--border-dark);
        border-radius: 15px;
        padding: 30px 25px;
        text-align: center;
        position: relative;
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .status-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-orange), var(--accent-blue));
        }

        .status-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--glow-orange);
            border-color: var(--accent-orange);
        }

    .status-icon {
        font-size: 42px;
        margin-bottom: 15px;
        display: block;
    }

    .status-value {
        font-size: 36px;
        font-weight: 800;
        color: var(--text-light);
        margin-bottom: 8px;
        text-shadow: 0 2px 10px rgba(0,0,0,0.3);
    }

    .status-label {
        font-size: 14px;
        color: var(--text-gray);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    /* Alert Systems */
    .system-alert {
        background: rgba(237, 137, 54, 0.1);
        border: 2px solid var(--accent-orange);
        border-radius: 12px;
        padding: 25px 30px;
        margin: 25px auto;
        max-width: 800px;
        box-shadow: var(--glow-orange);
        text-align: center;
    }

    .system-alert-success {
        background: rgba(72, 187, 120, 0.1);
        border-color: var(--accent-green);
        box-shadow: var(--glow-green);
    }

    .system-alert-warning {
        background: rgba(245, 101, 101, 0.1);
        border-color: var(--accent-red);
        box-shadow: 0 0 25px rgba(245, 101, 101, 0.4);
    }

    .alert-content {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 16px;
    }

    /* Dashboard Grid */
    .dashboard-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        margin-bottom: 35px;
    }


    /* Command Panel */
    .command-panel {
        background: var(--bg-card);
        border: 3px solid var(--border-dark);
        border-radius: 15px;
        overflow: hidden;
        position: relative;
        box-shadow: var(--glow-purple);
    }

    .panel-header {
        background: linear-gradient(135deg, var(--metal-medium), var(--metal-light));
        padding: 25px 30px;
        border-bottom: 3px solid var(--border-dark);
        position: relative;
    }

        .panel-header::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-purple), transparent);
        }

    .panel-title {
        font-size: 22px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .panel-icon {
        font-size: 26px;
    }

    .panel-body {
        padding: 30px;
    }

    /* Data Table */
    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

        .data-table th {
            background: var(--metal-dark);
            padding: 18px 20px;
            text-align: left;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 1.5px;
            border-bottom: 2px solid var(--border-dark);
            color: var(--accent-blue);
        }

        .data-table td {
            padding: 16px 20px;
            border-bottom: 1px solid var(--border-dark);
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .data-table tr:hover td {
            background: rgba(66, 153, 225, 0.1);
            transform: translateX(5px);
        }

    .data-badge {
        background: var(--metal-light);
        color: var(--text-light);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Action Grid */
    .action-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .action-card {
        background: var(--bg-card);
        border: 2px solid var(--border-dark);
        border-radius: 12px;
        padding: 25px 20px;
        text-align: center;
        text-decoration: none;
        color: var(--text-light);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .action-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            transition: left 0.6s;
        }

        .action-card:hover::before {
            left: 100%;
        }

        .action-card:hover {
            border-color: var(--accent-orange);
            transform: translateY(-3px);
            box-shadow: var(--glow-orange);
            text-decoration: none;
            color: var(--text-light);
        }

    .action-icon {
        font-size: 32px;
        margin-bottom: 12px;
        display: block;
    }

    .action-label {
        font-size: 14px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.2px;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 50px 30px;
        color: var(--text-gray);
    }

    .empty-icon {
        font-size: 64px;
        margin-bottom: 20px;
        display: block;
        opacity: 0.5;
    }

    .empty-title {
        font-size: 18px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 10px;
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .command-hub {
            padding: 15px;
        }

        .mission-control {
            padding: 25px;
        }

        .hub-title {
            font-size: 32px;
        }

        .hub-subtitle {
            font-size: 16px;
        }

        .status-grid {
            grid-template-columns: 1fr;
        }

        .dashboard-grid {
            gap: 20px;
        }

        .panel-body {
            padding: 20px;
        }

        .data-table th,
        .data-table td {
            padding: 12px 15px;
        }
    }

    @@media (max-width: 480px) {
        .command-hub {
            padding: 10px;
        }

        .mission-control {
            padding: 20px;
        }

        .hub-title {
            font-size: 24px;
        }

        .action-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Scanning Animation */
    @@keyframes scan {
        0% {
            transform: translateX(-100%);
        }

        100% {
            transform: translateX(400%);
        }
    }

    .scanning::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 20%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(66, 153, 225, 0.3), transparent);
        animation: scan 2s linear infinite;
    }
</style>

<div class="command-hub">
    <!-- Mission Control Header -->
    <div class="mission-control">
        <h1 class="hub-title">Производственная компания Комфорт</h1>
        <div class="hub-subtitle">СИСТЕМА КОНТРОЛЯ ПРОИЗВОДСТВЕННЫХ ОПЕРАЦИЙ</div>

        <!-- System Status -->
        @if (!Model.HasData)
        {
            <div class="system-alert system-alert-warning">
                <div class="alert-content">
                    <span>🚨</span>
                    <div>
                        СИСТЕМНЫЙ СБОЙ: НЕТ СВЯЗИ С ЦЕНТРАЛЬНЫМ СЕРВЕРОМ<br>
                        <small>АКТИВИРОВАН РЕЖИМ ЛОКАЛЬНОГО УПРАВЛЕНИЯ</small>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="system-alert system-alert-success">
                <div class="alert-content">
                    <span>✅</span>
                    <div>
                        СИСТЕМА СТАБИЛЬНА: @Model.Products.Count ОБЪЕКТОВ / @Model.ManufacturingData.Count ОПЕРАЦИЙ<br>
                        <small>ВСЕ ПОДСИСТЕМЫ ФУНКЦИОНИРУЮТ В ШТАТНОМ РЕЖИМЕ</small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Status Grid -->
    <div class="status-grid">
        <div class="status-card">
            <span class="status-icon">📦</span>
            <div class="status-value">@Model.TotalProducts</div>
            <div class="status-label">ЕДИНИЦ ПРОДУКЦИИ</div>
        </div>

        <div class="status-card">
            <span class="status-icon">🏗️</span>
            <div class="status-value">@Model.TotalWorkshops</div>
            <div class="status-label">ПРОИЗВОДСТВЕННЫХ ЦЕХОВ</div>
        </div>

        <div class="status-card">
            <span class="status-icon">⏱️</span>
            <div class="status-value">@Model.TotalManufacturingTime.ToString("F1")</div>
            <div class="status-label">ЧАСОВ ПРОИЗВОДСТВА</div>
        </div>

        <div class="status-card">
            <span class="status-icon">👥</span>
            <div class="status-value">@Model.ManufacturingData.Sum(x => x.WorkersCount)</div>
            <div class="status-label">ОПЕРАТОРОВ СИСТЕМЫ</div>
        </div>
    </div>

    <!-- Dashboard Grid -->
    <div class="dashboard-grid">
        <!-- Products Panel -->
        <div class="command-panel">
            <div class="panel-header">
                <div class="panel-title">
                    <span class="panel-icon">📦</span>
                    КАТАЛОГ ПРОДУКЦИИ
                </div>
            </div>
            <div class="panel-body">
                @if (Model.Products.Any())
                {
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>ИДЕНТИФИКАТОР</th>
                                <th>НАИМЕНОВАНИЕ</th>
                                <th>КЛАСС</th>
                                <th>СТОИМОСТЬ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products.Take(6))
                            {
                                <tr>
                                    <td>
                                        <span class="data-badge">@product.ArticleNumber</span>
                                    </td>
                                    <td>@product.ProductName</td>
                                    <td>
                                        <span class="data-badge" style="background: var(--accent-purple);">@product.ProductType</span>
                                    </td>
                                    <td style="color: var(--accent-green); font-weight: 700;">@product.MinPartnerPrice.ToString("C2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (Model.Products.Count > 6)
                    {
                        <div style="text-align: center; margin-top: 20px;">
                            <a href="/Products" class="action-card" style="display: inline-flex; align-items: center; gap: 10px; width: auto; padding: 15px 25px;">
                                <span>🔍</span>
                                <span class="action-label">ПОЛНЫЙ ОБЗОР</span>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <span class="empty-icon">📦</span>
                        <div class="empty-title">КАТАЛОГ ПУСТ</div>
                        <div>ТРЕБУЕТСЯ ЗАГРУЗКА ДАННЫХ</div>
                    </div>
                }
            </div>
        </div>

        <!-- Manufacturing Panel -->
        <div class="command-panel">
            <div class="panel-header">
                <div class="panel-title">
                    <span class="panel-icon">🏭</span>
                    ПРОИЗВОДСТВЕННЫЕ ОПЕРАЦИИ
                </div>
            </div>
            <div class="panel-body">
                @if (Model.ManufacturingData.Any())
                {
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>ИЗДЕЛИЕ</th>
                                <th>ЛОКАЦИЯ</th>
                                <th>ВРЕМЯ</th>
                                <th>СТАТУС</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model.ManufacturingData.Take(6))
                            {
                                <tr>
                                    <td>@data.ProductName</td>
                                    <td>
                                        <span class="data-badge" style="background: var(--accent-orange);">@data.WorkshopName</span>
                                    </td>
                                    <td style="color: var(--accent-blue); font-weight: 700;">@data.ManufacturingTimeHours Ч</td>
                                    <td>
                                        <span class="data-badge" style="background: var(--accent-green);">АКТИВНО</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (Model.ManufacturingData.Count > 6)
                    {
                        <div style="text-align: center; margin-top: 20px;">
                            <a href="/Manufacturing" class="action-card" style="display: inline-flex; align-items: center; gap: 10px; width: auto; padding: 15px 25px;">
                                <span>📊</span>
                                <span class="action-label">ВСЕ ОПЕРАЦИИ</span>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <span class="empty-icon">🏭</span>
                        <div class="empty-title">ОПЕРАЦИЙ НЕТ</div>
                        <div>ОЖИДАНИЕ ПРОИЗВОДСТВЕННЫХ ДАННЫХ</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Action Grid -->
    <div class="command-panel">
        <div class="panel-header">
            <div class="panel-title">
                <span class="panel-icon">🚀</span>
                ЦЕНТР БЫСТРОГО РЕАГИРОВАНИЯ
            </div>
        </div>
        <div class="panel-body">
            <div class="action-grid">
                <a href="/Products" class="action-card">
                    <span class="action-icon">📦</span>
                    <div class="action-label">УПРАВЛЕНИЕ ПРОДУКЦИЕЙ</div>
                </a>

                <a href="/Manufacturing" class="action-card">
                    <span class="action-icon">🏭</span>
                    <div class="action-label">ПРОИЗВОДСТВЕННЫЙ КОНТРОЛЬ</div>
                </a>

                <a href="/Analysis" class="action-card">
                    <span class="action-icon">📊</span>
                    <div class="action-label">ТАКТИЧЕСКАЯ АНАЛИТИКА</div>
                </a>

                <a href="/CalculateRawMaterial" class="action-card">
                    <span class="action-icon">🧮</span>
                    <div class="action-label">РАСЧЕТ РЕСУРСОВ</div>
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add scanning animation to status cards
        const statusCards = document.querySelectorAll('.status-card');
        statusCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'scale(0.8) translateY(20px)';

            setTimeout(() => {
                card.style.transition = 'all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                card.style.opacity = '1';
                card.style.transform = 'scale(1) translateY(0)';
            }, index * 150);
        });

        // Add real-time data simulation
        function simulateRealTimeUpdates() {
            const values = document.querySelectorAll('.status-value');
            values.forEach(value => {
                const original = parseFloat(value.textContent);
                if (!isNaN(original)) {
                    const variation = (Math.random() - 0.5) * 0.02;
                    const newValue = original * (1 + variation);
                    value.textContent = newValue.toFixed(1);

                    // Add pulse effect
                    value.style.color = '#48bb78';
                    setTimeout(() => {
                        value.style.color = '#e2e8f0';
                    }, 500);
                }
            });
        }

        // Update every 10 seconds
        setInterval(simulateRealTimeUpdates, 10000);

        // Add interactive scanning effect
        const panels = document.querySelectorAll('.command-panel');
        panels.forEach(panel => {
            panel.addEventListener('mouseenter', function() {
                this.classList.add('scanning');
            });

            panel.addEventListener('mouseleave', function() {
                this.classList.remove('scanning');
            });
        });

        // System status alert animation
        const alerts = document.querySelectorAll('.system-alert');
        alerts.forEach(alert => {
            alert.style.animation = 'pulse 2s infinite';
        });

    });
</script>