@page
@model AnalysisModel
@{
    ViewData["Title"] = "Панель управления производством";
}

<style>
    :root {
        --metal-dark: #2c3e50;
        --metal-medium: #34495e;
        --metal-light: #4a6572;
        --accent-orange: #e67e22;
        --accent-red: #e74c3c;
        --accent-green: #27ae60;
        --accent-blue: #3498db;
        --text-light: #ecf0f1;
        --text-gray: #bdc3c7;
        --bg-dark: #1a2530;
        --bg-card: #243342;
        --border-dark: #34495e;
        --glow: 0 0 15px rgba(230, 126, 34, 0.3);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, var(--bg-dark) 0%, #2c3e50 100%);
        font-family: 'Roboto', 'Arial', sans-serif;
        color: var(--text-light);
        min-height: 100vh;
        padding: 0;
    }

    .industrial-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Header Styles */
    .command-center {
        background: var(--bg-card);
        border: 2px solid var(--border-dark);
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 25px;
        position: relative;
        box-shadow: var(--glow);
    }

        .command-center::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-orange), var(--accent-red), var(--accent-green), var(--accent-blue));
        }

    .command-title {
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 8px;
        background: linear-gradient(135deg, var(--accent-orange), var(--accent-red));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .command-subtitle {
        color: var(--text-gray);
        font-size: 16px;
        font-weight: 400;
    }

    /* Control Panel */
    .control-panel {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .control-button {
        background: var(--bg-card);
        border: 2px solid var(--border-dark);
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .control-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            transition: left 0.5s;
        }

        .control-button:hover::before {
            left: 100%;
        }

        .control-button:hover {
            border-color: var(--accent-orange);
            transform: translateY(-3px);
            box-shadow: var(--glow);
        }

    .control-icon {
        font-size: 40px;
        margin-bottom: 15px;
        display: block;
    }

    .control-label {
        font-size: 14px;
        color: var(--text-gray);
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 8px;
    }

    .control-value {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 5px;
    }

    /* Dashboard Grid */
    .dashboard-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
        margin-bottom: 25px;
    }

    /* Industrial Panel */
    .industrial-panel {
        background: var(--bg-card);
        border: 2px solid var(--border-dark);
        border-radius: 12px;
        overflow: hidden;
        position: relative;
    }

    .panel-header {
        background: var(--metal-medium);
        padding: 20px;
        border-bottom: 2px solid var(--border-dark);
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .panel-title {
        font-size: 18px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .panel-actions {
        display: flex;
        gap: 10px;
    }

    .action-btn {
        background: var(--metal-light);
        border: none;
        border-radius: 6px;
        padding: 8px 15px;
        color: var(--text-light);
        cursor: pointer;
        font-size: 12px;
        transition: all 0.3s ease;
    }

        .action-btn:hover {
            background: var(--accent-orange);
            transform: translateY(-1px);
        }

    .panel-body {
        padding: 0;
    }

    /* Data Table */
    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

        .data-table th {
            background: var(--metal-dark);
            padding: 15px 20px;
            text-align: left;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 1px;
            border-bottom: 2px solid var(--border-dark);
        }

        .data-table td {
            padding: 15px 20px;
            border-bottom: 1px solid var(--border-dark);
            transition: background-color 0.3s ease;
        }

        .data-table tr:hover td {
            background: rgba(52, 73, 94, 0.5);
        }

    .status-indicator {
        display: inline-block;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        margin-right: 8px;
    }

    .status-active {
        background: var(--accent-green);
        box-shadow: 0 0 10px var(--accent-green);
    }

    .status-warning {
        background: var(--accent-orange);
        box-shadow: 0 0 10px var(--accent-orange);
    }

    .metric-value {
        font-weight: 700;
        font-size: 16px;
    }

    .metric-label {
        color: var(--text-gray);
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Alert Styles */
    .industrial-alert {
        background: rgba(231, 76, 60, 0.1);
        border: 1px solid var(--accent-red);
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        margin: 20px;
    }

    .alert-icon {
        font-size: 24px;
        margin-bottom: 10px;
        display: block;
    }

    /* Progress Bars */
    .efficiency-bar {
        height: 6px;
        background: var(--metal-light);
        border-radius: 3px;
        overflow: hidden;
        margin-top: 8px;
    }

    .efficiency-fill {
        height: 100%;
        background: linear-gradient(90deg, var(--accent-green), var(--accent-blue));
        border-radius: 3px;
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .industrial-container {
            padding: 15px;
        }

        .command-title {
            font-size: 24px;
        }

        .control-panel {
            grid-template-columns: 1fr;
        }

        .dashboard-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .data-table th,
        .data-table td {
            padding: 10px 15px;
        }
    }

    @@media (max-width: 480px) {
        .industrial-container {
            padding: 10px;
        }

        .panel-header {
            flex-direction: column;
            gap: 10px;
            align-items: flex-start;
        }

        .panel-actions {
            width: 100%;
            justify-content: space-between;
        }
    }
</style>

<div class="industrial-container">
    <!-- Command Center Header -->
    <div class="command-center">
        <h1 class="command-title">ЦЕНТР УПРАВЛЕНИЯ ПРОИЗВОДСТВОМ</h1>
        <p class="command-subtitle">Мониторинг и управление производственными процессами в реальном времени</p>
    </div>

    <!-- Control Panel -->
    <div class="control-panel">
        <div class="control-button" onclick="toggleProduction()">
            <span class="control-icon">⚙️</span>
            <div class="control-label">Статус системы</div>
            <div class="control-value">АКТИВЕН</div>
            <div class="efficiency-bar">
                <div class="efficiency-fill" style="width: 95%"></div>
            </div>
        </div>

        <div class="control-button" onclick="showMetrics()">
            <span class="control-icon">📊</span>
            <div class="control-label">Общая эффективность</div>
            <div class="control-value">87.3%</div>
            <div class="efficiency-bar">
                <div class="efficiency-fill" style="width: 87%"></div>
            </div>
        </div>

        <div class="control-button" onclick="viewWorkshops()">
            <span class="control-icon">🏭</span>
            <div class="control-label">Активных цехов</div>
            <div class="control-value">@Model.ProductionSummary.Select(s => s.Workshop).Distinct().Count()</div>
        </div>

        <div class="control-button" onclick="viewProduction()">
            <span class="control-icon">📦</span>
            <div class="control-label">Всего продукции</div>
            <div class="control-value">@Model.ProductionSummary.Sum(s => s.ProductCount)</div>
        </div>
    </div>

    <!-- Dashboard Grid -->
    <div class="dashboard-grid">
        <!-- Production Overview -->
        <div class="industrial-panel">
            <div class="panel-header">
                <div class="panel-title">
                    <span>🏭</span>
                    ОБЗОР ПРОИЗВОДСТВА
                </div>
                <div class="panel-actions">
                    <button class="action-btn" onclick="exportData()">ЭКСПОРТ</button>
                    <button class="action-btn" onclick="refreshData()">ОБНОВИТЬ</button>
                </div>
            </div>
            <div class="panel-body">
                @if (Model.ProductionSummary.Any())
                {
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Продукция</th>
                                <th>Локация</th>
                                <th>Время</th>
                                <th>Эффективность</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var summary in Model.ProductionSummary)
                            {
                                <tr>
                                    <td>
                                        <span class="status-indicator status-active"></span>
                                        @summary.ProductType
                                    </td>
                                    <td>
                                        <div class="metric-label">ЦЕХ</div>
                                        <div class="metric-value">@summary.Workshop</div>
                                    </td>
                                    <td>
                                        <div class="metric-label">СРЕДНЕЕ ВРЕМЯ</div>
                                        <div class="metric-value">@summary.AverageTime.ToString("F1") ч</div>
                                    </td>
                                    <td>
                                        <div class="metric-label">ПРОГРЕСС</div>
                                        <div class="efficiency-bar">
                                            <div class="efficiency-fill" style="width: @((summary.ProductCount / (double)Model.ProductionSummary.Sum(s => s.ProductCount)) * 100)%;"></div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="industrial-alert">
                        <span class="alert-icon">⚠️</span>
                        <div>ДАННЫЕ ПРОИЗВОДСТВА ОТСУТСТВУЮТ</div>
                    </div>
                }
            </div>
        </div>

        <!-- Production Analytics -->
        <div class="industrial-panel">
            <div class="panel-header">
                <div class="panel-title">
                    <span>📈</span>
                    АНАЛИТИКА ПРОДУКЦИИ
                </div>
                <div class="panel-actions">
                    <button class="action-btn" onclick="showCharts()">ГРАФИКИ</button>
                    <button class="action-btn" onclick="filterData()">ФИЛЬТР</button>
                </div>
            </div>
            <div class="panel-body">
                @if (Model.ProductsTotalTime.Any())
                {
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Изделие</th>
                                <th>Трудозатраты</th>
                                <th>Локации</th>
                                <th>Прогресс</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.ProductsTotalTime)
                            {
                                <tr>
                                    <td>
                                        <span class="status-indicator status-warning"></span>
                                        @product.ProductName
                                    </td>
                                    <td>
                                        <div class="metric-label">ЧАСЫ</div>
                                        <div class="metric-value">@product.TotalLaborHours.ToString("F1")</div>
                                    </td>
                                    <td>
                                        <div class="metric-label">ЦЕХА</div>
                                        <div class="metric-value">@product.WorkshopCount</div>
                                    </td>
                                    <td>
                                        <div class="metric-label">ЗАВЕРШЕНО</div>
                                        @{
                                            var efficiency = (product.TotalManufacturingTime / product.TotalLaborHours * 100);
                                            <div class="efficiency-bar">
                                                <div class="efficiency-fill" style="width: @(efficiency > 100 ? 100 : efficiency)%"></div>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="industrial-alert">
                        <span class="alert-icon">📊</span>
                        <div>АНАЛИТИЧЕСКИЕ ДАННЫЕ ОТСУТСТВУЮТ</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Industrial control functions
    function toggleProduction() {
        alert('Функция управления производством активирована');
    }

    function showMetrics() {
        alert('Отображение метрик эффективности');
    }

    function viewWorkshops() {
        alert('Переход к мониторингу цехов');
    }

    function viewProduction() {
        alert('Детализация производства');
    }

    function exportData() {
        alert('Экспорт данных в выбранный формат');
    }

    function refreshData() {
        location.reload();
    }

    function showCharts() {
        alert('Отображение графиков аналитики');
    }

    function filterData() {
        alert('Применение фильтров к данным');
    }

    // Add interactive effects
    document.addEventListener('DOMContentLoaded', function() {
        // Add pulse animation to status indicators
        const indicators = document.querySelectorAll('.status-indicator');
        indicators.forEach(indicator => {
            setInterval(() => {
                indicator.style.opacity = indicator.style.opacity === '0.5' ? '1' : '0.5';
            }, 1000);
        });

        // Add click effects to table rows
        const tableRows = document.querySelectorAll('.data-table tr');
        tableRows.forEach(row => {
            row.addEventListener('click', function() {
                tableRows.forEach(r => r.style.background = '');
                this.style.background = 'rgba(52, 73, 94, 0.3)';
            });
        });

        // Simulate real-time data updates
        setInterval(() => {
            const efficiencyBars = document.querySelectorAll('.efficiency-fill');
            efficiencyBars.forEach(bar => {
                const currentWidth = parseFloat(bar.style.width);
                const variation = (Math.random() - 0.5) * 2;
                const newWidth = Math.max(70, Math.min(95, currentWidth + variation));
                bar.style.width = newWidth + '%';
            });
        }, 3000);
    });
</script>